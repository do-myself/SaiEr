<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.dao.SwitchDao">

 
    <!-- 查询所有的交换机信息 -->
    <select id="query" resultType="switch">
       SELECT * FROM tb_switch 
    </select>

    <insert id="addSwitch" parameterType="switch">
        insert into tb_switch (mac,version,ipv4,ipv6,ports,flows,role)
        values (#{mac},#{version},#{ipv4},#{ipv6},#{ports},#{flows},#{role})
    </insert>

    <update id="modifySwitch" parameterType="switch">
        update tb_switch
        set mac=#{mac},version=#{version},ipv4=#{ipv4},ipv6=#{ipv6},ports=#{ports},flows=#{flows},role=#{role}
        where id=#{id}
    </update>

    <select id="querySwitchById" resultType="switch">
        select * from tb_switch
        where id=#{id}
    </select>

    <delete id="deleteSwitch">
        delete from tb_switch
        where id=#{id}
    </delete>

</mapper>